
  <header >
    <div class="site-name">Listing genres</div>
    <div style="display: flex; justify-content: center;">
      <ul>
        <li><%= link_to 'Create genre', new_genre_path, id: 'headerLink' %></li>
      </ul>
    </div>
  </header>


  <div id = 'models'>
    <table id ='modelsTable' style = 'margin-top: 195px'>
      <thead id = 'modelsThead'>
      <tr>
        <th >Name</th>
        <th >Action</th>
      </tr>
      </thead>
      <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to 'Show', genre_path(genre.id) %></td>

      <% end %>
      </table>
  </div>

