<div>
  <header >
    <div class="site-name">Create genre</div>
    <div style="display: flex; justify-content: center;">
      <ul>
        <%= link_to "Back to list", users_path, id: 'headerLink' %>

      </ul>
    </div>
  </header>

  <div>
    <%= form_with(id: 'modelForm', model: @genre, local: true) do |form| %>
      <div>
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div>
        <%= form.submit class: 'form-control btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
