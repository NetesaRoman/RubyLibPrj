<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Show details of biblioteka <%= @reader_card.id %></h4>
  </div>
  <div class="row justify-content-center">
    <table class="table">
      <tbody>
      <tr>
        <th>User:</th>
        <td><%= @reader_card.user.name %></td>
        <th>Lib:</th>
        <td><%= @reader_card.biblioteka.name %></td>
        <th>date issued:</th>
        <td><%= @reader_card.date_issued %></td>
        <th>date expired:</th>
        <td><%= @reader_card.date_expired %></td>


      </tr>
      </tbody>
    </table>
  </div>
  <%= link_to "Back to list", root_path %>
</div>
