<div >
  <header >
    <div class="site-name">
      <p >Show details of card <%= @reader_card.id %></p>
    </div>
    <div style="display: flex; justify-content: center;">

    </div>
  </header>
  <div>

        <h2>User:</h2>
        <p><%= @reader_card.user.name %></p>
        <h2>Lib:</h2>
        <p><%= @reader_card.biblioteka.name %></p>
        <h2>date issued:</h2>
        <p><%= @reader_card.date_issued %></p>
        <h2>date expired:</h2>
        <p><%= @reader_card.date_expired %></p>



  </div>
  <%= link_to "Back to list", root_path %>

  <div id = "root_buttons", style="margin-top: 10%;     justify-content: left;  align-items: center;">
    <td><%= button_to 'Edit', edit_reader_card_path(@reader_card), method: 'get', id: 'rootBtn'%></td>
    <td><%= button_to 'Remove', reader_card_path(@reader_card), method: 'delete', data: { confirm: 'Are you sure?' }, id: 'rootBtn'%></td>
  </div>

</div>
