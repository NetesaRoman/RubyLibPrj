<div >
  <header >
    <div class="site-name">Create Library</div>
    <div style="display: flex; justify-content: center;">
      <ul>
        <%= link_to "Back to list", root_path, id: 'headerLink' %>
        <%= link_to "Users", users_path, id: 'headerLink' %>
      </ul>
    </div>
  </header>
  <div >
    <%= form_with(id: 'modelForm', model: @biblioteka, local: true) do |form| %>
      <div >
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
        <%= form.label :address %>
        <%= form.text_field :address, class: 'form-control' %>
        <%= form.label :phone %>
        <%= form.text_field :phone, class: 'form-control' %>
      </div>

      <div >
        <%= form.submit class: 'form-control btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

