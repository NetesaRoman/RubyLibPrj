<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 display-4">Listing Bibliotekas</h4>
  </div>
  <%= link_to 'Create biblioteka', new_biblioteka_path %>
  <div class="row justify-content-center">
    <table class="table table-bordered">
      <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col" colspan="3">Action</th>
      </tr>
      </thead>
      <tbody>
      <% @bibliotekas.each do |biblioteka| %>
        <tr>
          <td><%= biblioteka.name %></td>
          <td><%= link_to 'Show', biblioteka_path(biblioteka.id) %></td>

      <% end %>
      </table>
  </div>
  <div class="p-3 mb-2 bg-light text-dark">
    <span class="text-info font-weight-bold">Welcome! </span>
    Create Book
  </div>
</div>
