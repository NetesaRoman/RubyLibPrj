<div >
  <header >
    <div class="site-name">Listing books</div>
    <div style="display: flex; justify-content: center;">
      <ul>
        <li><%= link_to 'Create books', new_book_path, id: 'headerLink' %></li>
      </ul>
    </div>
  </header>

  <%= search_form_for @q do |f| %>
    <%= f.label :name_cont, "Search by Title" %>
    <%= f.search_field :title_cont %>
    <%= f.submit "Search" %>
  <% end %>

  <div id = 'models'>
    <table id ='modelsTable' style = 'margin-top: 210px'>
      <thead id = 'modelsThead'>
      <tr>
        <th >Title</th>
        <th >Action</th>
      </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= link_to 'Show', book_path(book.id) %></td>

      <% end %>
      </table>
  </div>

</div>
