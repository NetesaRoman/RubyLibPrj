<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Show details of user <%= @user.id %></h4>
  </div>
  <div class="row justify-content-center">
    <table class="table">
      <tbody>
      <tr>
        <th>Name:</th>
        <td><%= @user.name %></td>
        <th>Email:</th>
        <td><%= @user.email %></td>
      </tr>
      </tbody>
    </table>
  </div>
  <%= link_to "Back to list", root_path %>

  <td><%= button_to 'Edit', edit_user_path(@user), method: 'get'%></td>
  <td><%= button_to 'Remove', user_path(@user), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
</div>
