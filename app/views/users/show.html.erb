<header >
  <div class="site-name">
    <p >Show details of user <%= @user.id %></p>
  </div>
  <div style="display: flex; justify-content: center;">

  </div>
</header>

<div >

  <div >

        <h2>Name:</h2>
        <p><%= @user.name %></p>
        <h2>Email:</h2>
        <p><%= @user.email %></p>

  </div>


  <div id = "root_buttons", style="margin-top: 10%;     justify-content: left;  align-items: center;">
    <td><%= button_to 'Edit', edit_user_path(@user), method: 'get', id: 'rootBtn'%></td>
    <td><%= button_to 'Remove', user_path(@user), method: 'delete', data: { confirm: 'Are you sure?' }, id: 'rootBtn'%></td>
  </div>
</div>
