<header >
  <div class="site-name">Update user Details</div>
  <div style="display: flex; justify-content: center;">
    <ul>
      <%= link_to "Back to list", root_path, id: 'headerLink' %>
      <%= link_to "Users", users_path, id: 'headerLink' %>
    </ul>
  </div>
</header>


<%= form_with id: 'modelForm', model: @user do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, class: 'form-control' %>
  <%= form.label :email %>
  <%= form.text_field :email, class: 'form-control' %>
  <%= form.submit %>
<% end %>
