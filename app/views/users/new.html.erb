<div >
  <header >
    <div class="site-name">Create user</div>
    <div style="display: flex; justify-content: center;">
      <ul>
        <%= link_to "Back to list", users_path, id: 'headerLink' %>

      </ul>
    </div>
  </header>
  <div >
    <%= form_with(id: 'modelForm', model: @user, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
        <%= form.label :email %>
        <%= form.text_field :email, class: 'form-control' %>
      </div>

      <div>
        <%= form.submit class: 'form-control btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
